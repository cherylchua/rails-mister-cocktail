<div class="container-home">
  <div class="banner">
    <div class="banner-content">
      <h1>Cocktail Hours <i class="fas fa-glass-martini"></i></h1>
      <%= link_to "Create Your Own Magic", new_cocktail_path, class: "btn btn-info"%>
    </div>
  </div>

  <div class="cards">
    <div class="container">
      <div class="row">
        <ul>
          <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <li class="card"><%= link_to cocktail.name, cocktail_path(cocktail.id) %></li>
          </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
